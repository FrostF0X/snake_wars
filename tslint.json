{
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
    "no-console": false,
    "interface-name": [
      true,
      "never-prefix"
    ],
    "typedef": [
      true,
      "call-signature",
      "parameter",
      "arrow-call-signature",
      "arrow-parameter",
      "property-declaration",
      "variable-declaration",
      "member-variable-declaration",
      "object-destructuring",
      "array-destructuring"
    ],
    "trailing-comma": [
      true,
      {
        "esSpecCompliant": true,
        // We could do nothing with this inspection - the best way to fix this is to submit bug to JetBrains
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        }
      }
    ]
  }
}
