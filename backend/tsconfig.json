{
  "compilerOptions": {
    "module": "commonjs",
    //output compile files to tmp directory and must be redirected by gulp
    "outDir": "./tmp/tsc",
    "declaration": true,
    "rootDir": "app",
    "target": "es5",
    "lib": ["es6"],
    "types": ["reflect-metadata"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "paths": [
    "node_modules"
  ]
}
